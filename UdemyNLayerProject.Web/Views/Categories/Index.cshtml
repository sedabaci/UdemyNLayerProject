@model IEnumerable<CategoryDto>

@{
    ViewData["Title"] = "Index";
}

<h1>CATEGORIES</h1>
<a class="btn btn-primary mb-3" asp-action="Create">Add Category</a>
<table class="table table-bordered">
    <thead>
    <th>Id</th>
    <th>Name</th>
    <th>Operation</th>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>
                    <a asp-action="Update" asp-route-id="@item.Id">Update</a>
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>                    
                </td>
            </tr>
        }
    </tbody>
</table>